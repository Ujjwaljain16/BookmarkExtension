{
  "manifest_version": 3,
  "name": "Fuze Web Clipper",
  "version": "1.0",
  "description": "Save and organize web content with Fuze - your intelligent bookmark manager",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "https://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}